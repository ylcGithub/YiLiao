<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/widget_size_335"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/widget_size_10">

        <dyzn.csxc.yiliao.lib_common.widget.AppTextView
            android:id="@+id/tv_raw_data_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blue_raw_data"
            android:textColor="@color/color_333"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <dyzn.csxc.yiliao.lib_common.widget.AppTextView
            android:id="@+id/tv_raw_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_5"
            android:padding="@dimen/widget_size_4"
            android:textColor="@color/color_666"
            android:textSize="@dimen/font_size_16"
            app:bg_radius="@dimen/widget_size_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_raw_data_key"
            app:stroke_color="@color/color_main_blue"
            app:stroke_width="@dimen/widget_size_1"
            tools:text="0x20395023850acde9998fdd" />

        <dyzn.csxc.yiliao.lib_common.widget.AppTextView
            android:id="@+id/tv_data_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_5"
            android:text="@string/blue_data_detail"
            android:textColor="@color/color_333"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_raw_data" />

        <dyzn.csxc.yiliao.lib_common.widget.AppTextView
            android:id="@+id/tv_len"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_5"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintEnd_toStartOf="@+id/tv_type"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_data_detail"
            tools:text="len" />

        <dyzn.csxc.yiliao.lib_common.widget.AppTextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_5"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintEnd_toStartOf="@+id/tv_value"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@+id/tv_len"
            app:layout_constraintTop_toBottomOf="@+id/tv_data_detail"
            tools:text="type" />

        <dyzn.csxc.yiliao.lib_common.widget.AppTextView
            android:id="@+id/tv_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_5"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintStart_toEndOf="@+id/tv_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_data_detail"
            tools:text="value12222" />

        <dyzn.csxc.yiliao.lib_common.widget.AppButton
            android:id="@+id/btn_sure"
            android:layout_width="@dimen/widget_size_100"
            android:layout_height="@dimen/widget_size_40"
            android:layout_marginTop="@dimen/widget_size_15"
            android:text="@string/sure"
            android:textSize="@dimen/font_size_18"
            app:btn_radius="@dimen/widget_size_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_value" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>